<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/title_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last update:"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.194"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name: "
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/title_last"
            app:layout_constraintTop_toBottomOf="@+id/title_last" />

        <TextView
            android:id="@+id/last_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Type: "
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/last_name"
            app:layout_constraintTop_toBottomOf="@+id/last_name" />

        <TextView
            android:id="@+id/last_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date: "
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/last_type"
            app:layout_constraintTop_toBottomOf="@+id/last_type" />


        <TextView
            android:id="@+id/last_name_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/last_name"
            app:layout_constraintTop_toTopOf="@+id/last_name" />

        <TextView
            android:id="@+id/last_type_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/last_type"
            app:layout_constraintTop_toTopOf="@+id/last_type" />

        <TextView
            android:id="@+id/last_date_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/last_date"
            app:layout_constraintTop_toTopOf="@+id/last_date" />

        <TextView
            android:id="@+id/last_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Result:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/last_date"
            app:layout_constraintTop_toBottomOf="@+id/last_date" />

        <TextView
            android:id="@+id/last_result_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/last_result"
            app:layout_constraintTop_toTopOf="@+id/last_result" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>